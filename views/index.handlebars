<h1>Eat Da Kosher Burger!</h1>

<div class="general">

  <div class="to-devour">
    <h2>Kosher Burger To Devour</h2>
    <ul>
      {{#each burger}}
      {{#unless devoured}}
      {{> burgers/burgers-block devoured=0}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="devoured-burger">
    <h2>Devoured Kosher Burgers</h2>
    <ul>
      {{#each burger}}
      {{#if devoured}}
      {{> burgers/burgers-block}}
      {{/if}}
      {{/each}}
      <br>
    <button class="throw-up" style="background-color: green; color:white;border-radius:10px;font-size:20px;">Throw Up ðŸ¤®</button>

  </div>
</div>


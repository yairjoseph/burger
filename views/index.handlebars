<h1>Eat Da Kosher Burger!</h1>

<div class="general">

<div class ="to-devour">
    <h2>Kosher Burger To Devour</h2>
<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burgers/burgers-block devoured=0}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="devoured-burger">
<h2>Devoured Kosher Burgers</h2>
<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> burgers/burgers-block}}
    {{/if}}
  {{/each}}
</div>
</div>

<div class="add-burger">
<h2 id="add-burger">Add a Kosher Burger!</h2>
<form class="create-form">
</ul>
    <textarea rows="4" cols="50" id="burg"></textarea>
<br>
    <button type="submit">Submit</button>
    <br>
    <br>
    Click "Submit" to add a new Kosher burger to devour!
</form>
</div>